{
  "name": "angular_core",
  "version": "0.0.3",
  "description": "Starter project for Angular 6+. Posible use SSR (Server side renderer) and Prerender.",
  "author": "Marek Bogdanovic <bogdanovic>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bogdanovic/angular_core"
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 firefox versions",
    "last 3 opera versions",
    "last 3 edge versions",
    "last 3 safari versions",
    "ie >= 11",
    "ios >= 11",
    "android >= 4.4.2",
    "ie_mob >= 10",
    "last 3 firefoxandroid versions",
    "last 3 chromeandroid versions"
  ],
  "scripts": {
    "preinstall": "",
    "ng": "ng",
    "build": "npm run config && ng build --prod --aot --build-optimizer --vendor-chunk --extract-css true",
    "build:base-href": "npm run config && ng build --prod --aot --build-optimizer --vendor-chunk --extract-css true --base-href",
    "build:client-and-server-bundles": "npm run build:base-href && ng run skeleton-angular:server:production",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "clear:dist": "rm -r dist",
    "config": "ts-node ./set-env.ts",
    "e2e": "ng e2e",
    "generate:prerender": "cd dist && node prerender",
    "lint": "ng lint",
    "serve:build": "npm run config && ng serve --prod --open",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
    "start": "npm run config -- --environment=dev && ng serve --open",
    "test": "ng test",
    "webpack:server": "webpack --config ssr/webpack.server.config.js --progress --colors",
    "compodoc": "./node_modules/.bin/compodoc -p src/tsconfig.browser.json --theme vagrant",
    "serve.compodoc": "node_modules/.bin/compodoc -s -o"
  },
  "dependencies": {
    "@angular/animations": "^6.1.2",
    "@angular/common": "^6.1.2",
    "@angular/compiler": "^6.1.2",
    "@angular/core": "^6.1.2",
    "@angular/forms": "^6.1.2",
    "@angular/http": "^6.1.2",
    "@angular/platform-browser": "^6.1.2",
    "@angular/platform-browser-dynamic": "^6.1.2",
    "@angular/platform-server": "^6.1.2",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.1.2",
    "@angular/service-worker": "^6.1.2",
    "@compodoc/compodoc": "~1.1.3",
    "@nguniversal/common": "^6.0.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "class-transformer": "^0.1.9",
    "core-js": "^2.5.4",
    "fs-extra": "^6.0.1",
    "ng2-meta": "^5.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "simple-git": "^1.95.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.1.3",
    "@angular/compiler-cli": "^6.1.2",
    "@angular/language-service": "^6.1.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "dotenv": "^6.0.0",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "opn": "^5.3.0",
    "protractor": "~5.3.0",
    "standard-version": "^4.4.0",
    "ts-loader": "^4.2.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.9.2",
    "webpack-cli": "^2.0.14"
  }
}
